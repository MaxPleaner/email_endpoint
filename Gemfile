source "http://rubygems.org"

# Minimal MVC framework
gem "sinatra"

# Base server which runs Sinatra
gem "rack"

# Testing framework
gem 'rspec'

# Ruby core extensions
gem 'activesupport'

# JSON parser
gem 'json'

# Environment variable loader (.env is in .gitignore)
gem 'dotenv'

# Http Client
gem 'rest-client'
gem 'mechanize'

# Pry is a more full-featured debugger but byebug is more dependable
# I like to be able to use either one.
gem "byebug"
gem "pry"

# gem which can read mail from Gmail
gem "gmail"